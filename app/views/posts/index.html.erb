<div class="container-issues">
  <% if @favorites %>
     <h1 style="" id="posts-index-title">My Posts<span class="green-period">.</span></h1>
  <% else %>
     <h1 style="" id="posts-index-title"><%= t('.search') %><span class="green-period">.</span></h1>
  <% end %>
  <div class="row">
    <div class="col-xs-12" style="margin-bottom: 30px">
      <%= render 'filter' %>
    </div>
  </div>

  <div class="row" id="posts-grid">
    <% @posts.each do |post| %>

    <div class="col-xs-12 col-md-4">
      <div class="issue-card-search border-gray">
        <%= link_to post_path(post) do %>
        <div class="link-box">
        </div>
        <% end %>
        <div class="issue-card-neighbourhood">
          <%= post.neighbourhood %>
        </div>
        <div class="issue-card-upvote">
          <%= post.get_upvotes.size %>
          <%= link_to like_post_path(post), method: :put do %>
          <i class="fa fa-caret-up" aria-hidden="true"></i>
          <% end %>
        </div>

        <span class="issue-card-text">
          <span class="issue-card-title-search">
            <%= post.title %>
          </span>
          <span class="issue-card-category">
            #<%= post.category %>
          </span>
        </span>
      </div>
    </div>
    <% end %>
  </div>
</div>

