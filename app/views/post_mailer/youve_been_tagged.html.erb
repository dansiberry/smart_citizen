<style>@import url(http://fonts.googleapis.com/css?family=Open-Sans);</style>


<%= image_tag attachments["logo.png"].url, style: 'width: 150px' %>

<h1 style="font-family: 'Open-Sans', Verdana; text-align: center"><%= t('.greeting') %></h1>

<p style="font-family: 'Open-Sans', Verdana; text-align: center">
  <%= t('.content', name: @post.user.first_name + " " + @post.user.last_name, neighbourhood: @post.user.neighbourhood, title: @post.title) %>
</p>

<table cellpadding="0" cellspacing="0" border="0" id="backgroundTable">
  <tr>
    <td>
      <table cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
        <td width="400" valign="top">
            <p style="font-family: 'Open-Sans', Verdana; text-align: center; font-weight: bold"><%= @post.title %></p>
          </td>
        </tr>
        <tr>
          <td width="400" valign="top">
            <p style="font-family: 'Open-Sans', Verdana; text-align: justify"><%= @post.content %></p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<p style="font-family: 'Open-Sans', Verdana; text-align: center">
  <%= link_to t('.reply_button'), new_post_comment_url(locale: "es", post_id: @post.id), style: "color: white; background-color: #6ECA52; padding: 10px; border-radius: 4px; text-decoration: none; display: inline-block; font-size: 16px; font-family: 'Open-Sans', Verdana; margin-top: 10px" %>
</p>
