<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

      <h2 class="form-title"><%= t('.sign_up') %><span class="green-period">.</span></h2>

      <div class="claim-public-profile">
        <span><%= t('.elected_official') %></span>
        <%= mail_to "info@citizenvoice.io", t('.claim_profile'), html_options = { subject: t('.email_subject'), body: t('.email_body')} %>
      </div>

      <div class="devise-links">
        <%= render "devise/shared/top-links" %>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, label: t('.first_name_label'), input_html: {class: "box-input"} %>
        <%= f.input :last_name, required: true, label: t('.last_name_label'), input_html: {class: "box-input"} %>
        <%= f.input :address, required: true, label: t('.address_label'), input_html: {class: "box-input"} %>
        <%= f.input :city, required: true, label: t('.city_label'), collection: ApplicationRecord::CITIES, input_html: {value: 'Barcelona', class: "box-input"} %>
        <%= f.input :neighbourhood, required: true, label: t('.neighbourhood_label'), collection: ApplicationRecord::NEIGHBOURHOODS, input_html: {class: "box-input"} %>
        <%= f.input :email, required: true, label: false, placeholder: t('.email_label'),input_html: {class: "box-input"} %>
        <%= f.input :password, required: true, label: t('.password_label'), hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "box-input"} %>
        <%= f.input :password_confirmation, required: true, label: t('.confirm_password_label'), input_html: {class: "box-input"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('.sign_up') %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


