<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

      <h2 class="form-title"><%= t('.title', resource: resource_class.model_name.human) %><span class="green-period">.</span></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: false, autofocus: true, label: t('.first_name_label'), input_html: {class: "box-input"} %>
        <%= f.input :last_name, required: false, label: t('.last_name_label'), input_html: {class: "box-input"} %>
        <%= f.input :address, required: true, label: t('.address_label'), input_html: {class: "box-input"} %>
        <%= f.input :city, required: true, label: t('.city_label'), collection: ApplicationRecord::CITIES, input_html: {class: "box-input"} %>
        <%= f.input :neighbourhood, required: true, label: t('.neighbourhood_label'),collection: ApplicationRecord::NEIGHBOURHOODS, input_html: {class: "box-input"} %>
        <%= f.input :email, required: true, autofocus: true, placeholder: t('email_placeholder'), input_html: {class: "box-input"} %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: t('.leave_blank_if_you_don_t_want_to_change_it'), required: false, input_html: {class: "box-input"} %>
        <%= f.input :password_confirmation, required: false, input_html: {class: "box-input"} %>
        <%= f.input :current_password, hint: t('.we_need_your_current_password_to_confirm_your_changes'), required: true, input_html: {class: "box-input"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('.update') %>
      </div>
      <% end %>

      <div class="signout padded-sm">
        <%= link_to t('.sign_out'), destroy_user_session_path, method: :delete %>
      </div>

      <p><%= t('.unhappy') %> <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>


