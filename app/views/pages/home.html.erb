  <div class="banner-background">

  </div>

  <div class="banner padded">

    <div class="banner-content padded-sm">
      <div class="anchor">
        <h1><%= t('.title') %><span class="green-period">.</span></h1>
        <div class="home-search">
        <%= render 'shared/search' %>
        </div>
      </div>
    </div>



 <!--    <div class="scroll-prompt">

    </div> -->

  </div>





  <div class="container how-to-container">

      <a class="container-arrow scroll-to" href="#focus">
      <span><i class="fa fa-angle-down" aria-hidden="true"></i></span>
    </a>
    <div class="how-to-section">
        <h2 class="how-to-section-title">
          Local politics made easy
        </h2>
        <div class="col-xs-12 col-md-4 how-to">
          <%= image_tag "how-to-1-1.png" %>
          <div class="how-to-text-section">
            <h3 class="how-to-title">
              Search issues in your area
            </h3>
            <p class="how-to-text">
              Search by neighbourhood to find out what issues are being raised in your area. Upvote issues you suppert to make sure politicians respond.
            </p>
          </div>
        </div>

        <div class="col-xs-12 col-md-4 how-to">
          <%= image_tag "how-to-2-2.png" %>
                    <div class="how-to-text-section">
            <h3 class="how-to-title">
              Raise an issue
            </h3>
            <p class="how-to-text">
              Raise your issue and tag the politicians you want a response from. Tweet at them and share your issue on social media to gain support.
            </p>
          </div>
        </div>

        <div class="col-xs-12 col-md-4 how-to">
          <%= image_tag "how-to-3-3.png" %>
                    <div class="how-to-text-section">
            <h3 class="how-to-title">
              Connect with politicans
            </h3>
            <p class="how-to-text">
              Read and compare responses from politicians. View their profiles for more about their policies and political party. Browse other politicians who are active locally.
            </p>
          </div>
        </div>
    </div>
  </div>

  <div class="container most-voted">

    <h3 style = "font-size:34px; margin-top:100px; padding-bottom:20px;"><%= t('.popular_issues') %><span class="green-period">.</span></h3>

<!--     <h3 style = "font-size:34px; margin-top:100px; padding-bottom:20px;"><%= t('.popular_issues') %><span class="green-period">.</span></h3> -->

    <div class="row padded-sm">
      <% @upvoted_posts.each do |popular_post| %>
      <div class="col-xs-12 col-md-4">
        <div class="issue-card bg-white">
          <%= link_to post_path(popular_post) do %>
          <div class="link-box">
          </div>
          <% end %>
          <div class="issue-card-neighbourhood">
            <%= popular_post.neighbourhood %>
          </div>
          <div class="issue-card-upvote">
            <%= popular_post.get_upvotes.size %>
            <%= link_to like_post_path(popular_post), method: :put do %>
            <i class="fa fa-caret-up" aria-hidden="true"></i>
            <% end %>
          </div>
          <%= link_to post_path(popular_post) do %>


          <div class="issue-card-title">
            <%= popular_post.title %>
          </div>
          <div class="issue-card-category">
            #<%= popular_post.category %>
          </div>

          <% end %>
        </div>
      </div>
      <% end %>
    </div>
</div>
